
@model List<AddCourseModel>

@{
    ViewData["Title"]="Add Course Page";
   
}

<div class="w3l-signinform">
    <!-- container -->
    <div class="row">
        <!-- main content -->

                    <div class="col-md-6">
                       <h1>Course List</h1> 

                       <table>
                        <thead>
                            <tr class="h5 text-warning">
                                <th class="px-2">Course ID</th>
                                <th class="px-2">Course Name</th>
                                <th class="px-2">Course Duration</th>
                                <th class="px-2">Trainer Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var courselist in Model){
                            <tr class="text-white">
                                <td class="px-2 py-2">@courselist.course_id</td>
                                <td class="px-2 py-2">@courselist.course_name</td>
                                <td class="px-2 py-2">@courselist.course_duration</td>
                                <td class="px-2 py-2">@courselist.trainer_name</td>
                                <td class="px-2 py-2"><a  class=" btn bg-primary text-white" href="#"> Edit</a> </td>
                                <td class="px-2 py-2" ><a  class=" btn bg-primary text-white" href="@Url.Action("DeleteCourse","Admin", new {CourseID=courselist.course_id})">Delete</a></td>
                               

                            
                            
                            </tr>
                            }
                        </tbody>

                       </table>



                    </div>
            
                    <div class="col-md-6">
                            <div class="w3_info">
                                <h1>Add Course Details</h1>
                                  <h2>Course Details</h2>
                                <form action="@Url.Action("AddCourseIn", "Admin")" method="post">
                                    <div class="input-group">
                                        <span><i class="fa fa-user" aria-hidden="true"></i></span>
                                        <input type="text" name="course_name" placeholder="Course Name" required="">
                                    </div>
                                    <div class="input-group">
                                        <span><i class="fa fa-user" aria-hidden="true"></i></span>
                                        <input type="text" name="course_duration" placeholder="Course Duration" required="">
                                    </div>
                                    <div class="input-group">
                                        <span><i class="fa fa-envelope" aria-hidden="true"></i></span>
                                        <input type="text" name="course_description" placeholder="Course Description" required="">
                                    </div>
                                    <div class="input-group">
                                        <span><i class="fa fa-phone" aria-hidden="true"></i></span>
                                        <input type="text" name="trainer_name" placeholder="Trainer Name" required="">
                                    </div>

                                    <button class="btn btn-primary btn-block" type="submit">Add Course</button>
                                </form>
                            
                            </div>
                        </div>


        <!-- //main content -->
    </div>
    <!-- //container -->
    <!-- footer -->
    <div class="footer">
        <p>&copy; 2021 Gathering Log In form. All Rights Reserved | Design by <a href="https://w3layouts.com/"
                target="blank">W3layouts</a></p>
    </div>
    <!-- footer -->
</div>
